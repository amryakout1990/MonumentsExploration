                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Ellipse x:Name="e2_11" Tag="e2_11" Grid.Row="1" Grid.Column="10" Style="{StaticResource EllipseStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding GetPointsCommand}"
                                    CommandParameter="{Binding ElementName=e2_11, Path=Tag}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Ellipse>
                    <Ellipse x:Name="e6_113" Tag="e6_113" Grid.Row="5" Grid.Column="10" Style="{StaticResource EllipseStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding GetPointsCommand}"
                                    CommandParameter="{Binding ElementName=e6_113, Path=Tag}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Ellipse>
                    <Ellipse x:Name="e11_12" Tag="e11_12" Grid.Row="10" Grid.Column="11" Style="{StaticResource EllipseStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding GetPointsCommand}"
                                    CommandParameter="{Binding ElementName=e11_12, Path=Tag}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Ellipse>

                </Grid>

                <!--ShowMonuments Grid-->
                <Grid Grid.Column="0" Margin="5" >
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
