<Window x:Class="MonumentsExploration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonumentsExploration"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Background="Transparent" WindowState="Maximized">
    <Border CornerRadius="10" Style="{StaticResource BorderMain}" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Map Grid View" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <RadioButton Content="Show Grid Lines" Grid.Row="0" Margin="5"
                                     Style="{DynamicResource RadioButtonStyle}"
                                     Command="{Binding ShowGridCommand}"/>
                        <RadioButton Grid.Row="1" Content="Hide Grid Lines" Margin="5"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Command="{Binding HideGridCommand}"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Show IDS In Cells" Margin="5" Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <RadioButton Content="Show IDS" Grid.Row="0" Margin="5"
                                     Style="{DynamicResource RadioButtonStyle}"
                                     Command="{Binding ShowIDSCommand}"/>
                        <RadioButton Grid.Row="1" Content="Hide IDS" Margin="5"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Command="{Binding HideIDSCommand}"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Monuments Locations" Margin="5" Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <RadioButton Content="Show Locations" Grid.Row="0" Margin="5"
                                     Style="{DynamicResource RadioButtonStyle}"
                                     Command="{Binding ShowLocationsCommand}"/>
                        <RadioButton Grid.Row="1" Content="Hide Locations" Margin="5"
                                     Style="{StaticResource RadioButtonStyle}"
                                     Command="{Binding HideLocationsCommand}"/>
                    </Grid>
                </GroupBox>
                <fa:ImageAwesome Grid.Column="3" Icon="Close" Style="{StaticResource FaCloseStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding FaCloseCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </fa:ImageAwesome>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Images/72.gif" Stretch="Fill" Margin="5"/>
                
                <!--<ContentControl Grid.Column="0" Margin="5" Content="{Binding CurrentViewModel}"/>-->
                
                <!--ShowGridLinesGrid-->
                <Grid Grid.Column="0" Margin="5" >
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="ShowGridLines" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowGrid}" Value="True">
                                    <Setter Property="ShowGridLines" Value="True"/>
                                    <Setter Property="Panel.ZIndex" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>

                <!--ShowIDSGrid-->
                <Grid Grid.Column="0" Margin="5" >
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility"  Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowIDSBool}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Panel.ZIndex" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
