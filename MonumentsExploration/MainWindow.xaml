                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image x:Name="P9_10" Tag="musem" Grid.Row="8" Grid.Column="9" Source="/Images/11.jpeg" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding GetImageCommand}"
                                    CommandParameter="{Binding ElementName=P9_10, Path=Tag}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                    <Image x:Name="P3_11" Tag="Pyramids" Grid.Row="2" Grid.Column="10" Source="/Images/13.png" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding GetImageCommand}"
                                    CommandParameter="{Binding ElementName=P3_11, Path=Tag}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                    <Image x:Name="P11_13" Tag="sonpol" Grid.Row="11" Grid.Column="13" Source="/Images/12.jpg" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction 
                                    Command="{Binding GetImageCommand}"
                                    CommandParameter="{Binding ElementName=P11_13, Path=Tag}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>

                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>
