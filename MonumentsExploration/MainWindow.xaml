                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <RadioButton x:Name="t6_6" Grid.Row="5" Grid.Column="5" Content="6.6" Style="{StaticResource RadioButtonIDS}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction 
                                    Command="{Binding TextIdsCommand}"
                                    CommandParameter="{Binding ElementName=t6_6, Path=Content}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>
                    <RadioButton x:Name="t10_12" Grid.Row="9" Grid.Column="11" Content="10.12" Style="{StaticResource RadioButtonIDS}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction 
                                    Command="{Binding TextIdsCommand}"
                                    CommandParameter="{Binding ElementName=t10_12, Path=Content}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>
                    <RadioButton x:Name="t12_15" Grid.Row="11" Grid.Column="14" Content="12.15" Style="{StaticResource RadioButtonIDS}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction 
                                    Command="{Binding TextIdsCommand}"
                                    CommandParameter="{Binding ElementName=t12_15, Path=Content}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>
                </Grid>

                <!--ShowLocations Grid-->
                <Grid Grid.Column="0" Margin="5" >
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility"  Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowLocationsBool}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Panel.ZIndex" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
